@model Hulujan_Iulia_Petruta_proiectNouM.Models.CourseEnrollment

@{
    ViewData["Title"] = "Adaugă Notă / Înregistrare Curs";
}

<h2>Adaugă Notă</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label class="control-label">Student</label>
                <select asp-for="StudentID" class="form-control" asp-items="ViewBag.StudentID">
                    <option value="">-- Selectează Studentul --</option>
                </select>
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Curs</label>
                <select asp-for="CourseID" class="form-control" asp-items="ViewBag.CourseID">
                    <option value="">-- Selectează Cursul --</option>
                </select>
                <span asp-validation-for="CourseID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Notă (Valoare)</label>
                <input name="GradeValue" class="form-control" type="text" /> 
                <span class="text-danger">@Html.ValidationMessage("GradeValue")</span> 
            </div>

            <div class="form-group mb-3">
                <label asp-for="EnrollmentDate" class="control-label">Data Înregistrării</label>
                <input asp-for="EnrollmentDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
