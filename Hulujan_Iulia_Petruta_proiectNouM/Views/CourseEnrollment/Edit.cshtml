@model Hulujan_Iulia_Petruta_proiectNouM.Models.CourseEnrollment

@{
    ViewData["Title"] = "Editează Notă";
}

<h1>Editează Notă</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseEnrollmentID" /> 

            <div class="form-group mb-3">
                <label class="control-label">Student</label>
                <select asp-for="StudentID" class="form-control" asp-items="ViewBag.StudentID" disabled></select>
                <input type="hidden" asp-for="StudentID" /> 
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Curs</label>
                <select asp-for="CourseID" class="form-control" asp-items="ViewBag.CourseID"></select>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Notă (Valoare)</label>
                <input name="GradeValue" class="form-control"
                       type="text"
                       value="@ViewData["CurrentGradeValue"]" 
                       placeholder="Introduceți nota (număr întreg)" />
                <span class="text-danger">@Html.ValidationMessage("GradeValue")</span> 
            </div>

            <div class="form-group mb-3">
                <label asp-for="EnrollmentDate" class="control-label">Data Înregistrării</label>
                <input asp-for="EnrollmentDate" class="form-control" type="date" />
                <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}