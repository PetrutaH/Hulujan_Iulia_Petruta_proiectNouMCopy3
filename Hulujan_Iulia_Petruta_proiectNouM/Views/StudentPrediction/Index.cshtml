@model Hulujan_Iulia_Petruta_proiectNouM.Models.StudentPredictionViewModel

@{
    ViewData["Title"] = "Performance Prediction Using ML.Net";
}

<h2>Student Performace Prediction using ML.NET</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="textdanger"></div>
            <div class="form-group">
                <label asp-for="hours_Studied" class="controllabel"></label>
                <input asp-for="hours_Studied" class="form-control" />
                <span asp-validation-for="hours_Studied" class="textdanger"></span>
            </div>
            <div class="form-group">
                <label asp-for="previous_Scores" class="controllabel"></label>
                <input asp-for="previous_Scores" class="form-control" />
                <span asp-validation-for="previous_Scores" class="textdanger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sleep_Hours" class="controllabel"></label>
                <input asp-for="sleep_Hours" class="form-control" />
                <span asp-validation-for="sleep_Hours" class="textdanger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sample_Question_Papers_Practiced" class="controllabel"></label>
                <input asp-for="sample_Question_Papers_Practiced" class="form-control" />
                <span asp-validation-for="sample_Question_Papers_Practiced" class="textdanger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Check" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-offset-2 col-md-4">
        @if (Model?.score != null)
        {
            <h1>Result</h1>
            <h2>Student Performance: @Model.score</h2>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}